<%= form_for @announcement, :url => { :controller => 'billboard', :action => 'update', :id => @announcement } do |f| %>
    <%= f.label :title, "Title" %>
    <%= f.text_field :title %>

    <%= f.label :date, "Date" %>
    <%= f.text_field :date %>

    <%= f.label :description, "Description" %>
    <%= f.text_area :description %>

    <%= f.submit "Update" %>
<% end %>